                        android:src="@drawable/cmu_icon8" />

                    <ImageView
                        android:id="@+id/imageView35"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/cmu_icon9" />

                    <ImageView
                        android:id="@+id/imageView38"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/cmu_icon10" />

                    <ImageView
                        android:id="@+id/imageView39"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/cmu_icon11" />

                    <ImageView
                        android:id="@+id/imageView40"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/cmu_icon12" />

                </GridLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>