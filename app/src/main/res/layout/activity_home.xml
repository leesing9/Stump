<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/animatedBottomBar"/>

    <nl.joery.animatedbottombar.AnimatedBottomBar
        android:id="@+id/animatedBottomBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menubar_radius"
        android:elevation="2dp"
        app:abb_indicatorAppearance="round"
        app:abb_animationDuration="600"
        app:abb_rippleColor="#4C6BFD"
        app:abb_indicatorColor="#4C6BFD"
        app:abb_selectedIndex="1"
        app:abb_tabAnimation="fade"
        app:abb_indicatorHeight="4dp"
        app:abb_tabColor="#222222"
        app:abb_tabColorSelected="#4C6BFD"
        app:abb_tabs="@menu/menu" />

</RelativeLayout>